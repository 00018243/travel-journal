extends ../layout.pug

block content
  h2 Edit Trip
  if error
    p(style='color:red') #{error}
  form(action=`/trips/edit/${trip.id}`, method='POST')
    label(for='title') Title:
    input(type='text', name='title', value=trip.title, required)
    br
    label(for='location') Location:
    input(type='text', name='location', value=trip.location, required)
    br
    label(for='date') Date:
    input(type='date', name='date', value=trip.date, required)
    br
    label(for='experiences') Experiences:
    textarea(name='experiences') #{trip.experiences || ''}
    br
    button(type='submit') Update Trip
  a(href='/trips') Back to Trips